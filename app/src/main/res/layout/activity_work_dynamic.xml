<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/layout_background_default"
			  android:orientation="vertical">
	
	<include layout="@layout/title_bar" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/x12"
		android:background="@color/white">
		
		<EditText
			android:id="@+id/et_work_seach"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/x36"
			android:layout_weight="1"
			android:background="@color/white"
			android:hint="请输入内容..."
			android:imeOptions="actionSearch"
			android:paddingLeft="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:textSize="@dimen/t12" />
		
		<ImageView
			android:id="@+id/iv_et_search"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:paddingLeft="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:scaleType="center"
			android:src="@drawable/icon_search" />
	</LinearLayout>
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_work_dynamic"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
</LinearLayout>