<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical"
	android:padding="@dimen/x10">
	
	<ImageView
		android:id="@+id/iv_item_fortress_news"
		android:layout_width="@dimen/x135"
		android:layout_height="@dimen/x80"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:src="@drawable/img_fortress_news_0" />
	
	<TextView
		android:id="@+id/tv_item_fortress_news_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/x10"
		android:layout_toRightOf="@id/iv_item_fortress_news"
		android:maxLines="2"
		android:text="强化措施，奋力冲刺，确保圆满完成全年目标任务"
		android:textColor="@color/black_title"
		android:textSize="@dimen/t18" />
	
	
	<TextView
		android:id="@+id/tv_item_fortress_news_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@id/iv_item_fortress_news"
		android:text="第四纪检组"
		android:textColor="@color/black_hint"
		android:textSize="@dimen/t14" />
	
	<TextView
		android:id="@+id/tv_item_fortress_news_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:text="2017-01-01"
		android:textColor="@color/black_hint"
		android:textSize="@dimen/t14" />


</RelativeLayout>
