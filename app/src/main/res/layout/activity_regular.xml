<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">
	
	<include layout="@layout/title_bar" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/img_ragular_bg"
		android:orientation="vertical">
		
		<RadioGroup
			android:id="@+id/rg_ragular"
			android:layout_width="match_parent"
			android:layout_height="@dimen/view_height"
			android:background="@color/white"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/x5"
			android:paddingLeft="@dimen/x12"
			android:paddingRight="@dimen/x12"
			android:paddingTop="@dimen/x5">
			
			<RadioButton
				android:id="@+id/rb_ragular_0"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/select_tab_left"
				android:button="@null"
				android:checked="true"
				android:gravity="center"
				android:text="中央"
				android:textColor="@color/select_tab" />
			
			<RadioButton
				android:id="@+id/rb_ragular_1"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/select_tab_center"
				android:button="@null"
				android:gravity="center"
				android:text="省"
				android:textColor="@color/select_tab" />
			
			<RadioButton
				android:id="@+id/rb_ragular_2"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/select_tab_center"
				android:button="@null"
				android:gravity="center"
				android:text="市"
				android:textColor="@color/select_tab" />
			
			<RadioButton
				android:id="@+id/rb_ragular_3"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/select_tab_right"
				android:button="@null"
				android:gravity="center"
				android:text="区"
				android:textColor="@color/select_tab" />
		</RadioGroup>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/x12"
			android:background="@color/white">
			
			<EditText
				android:id="@+id/et_reguler_seach"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/x36"
				android:layout_weight="1"
				android:background="@color/white"
				android:hint="请输入内容..."
				android:imeOptions="actionSearch"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:textSize="@dimen/t12" />
			
			<ImageView
				android:id="@+id/iv_et_search"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:adjustViewBounds="true"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:scaleType="center"
				android:src="@drawable/icon_search" />
		</LinearLayout>
		
		<android.support.v4.view.ViewPager
			android:id="@+id/vp_regular"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</LinearLayout>
</LinearLayout>