<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal">
	
	<ImageView
		android:layout_width="@dimen/x50"
		android:layout_height="@dimen/x50"
		android:layout_margin="@dimen/x10"
		android:background="@drawable/shape_cir_message"
		android:scaleType="center"
		android:src="@drawable/ic_notif" />
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:id="@+id/tv_item_message_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/x10"
				android:layout_weight="1"
				android:textColor="@color/black_title"
				android:textSize="@dimen/t16"
				android:textStyle="bold"
				tools:text="通知公告" />
			
			<TextView
				android:id="@+id/tv_item_message_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:textColor="@color/black_hint"
				android:textSize="@dimen/t16"
				tools:text="2017-01-08" />
		</LinearLayout>
		
		
		<TextView
			android:id="@+id/tv_item_message_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:layout_marginBottom="@dimen/x10"
			android:textColor="@color/black_title"
			android:textSize="@dimen/t16"
			tools:text="贾汪区旅游宣传口号网络投票入口" />
	</LinearLayout>


</LinearLayout>