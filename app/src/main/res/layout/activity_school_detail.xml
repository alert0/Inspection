<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">
	
	<include layout="@layout/title_bar" />
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/tv_shcool_detail_title"
				android:layout_width="match_parent"
				android:layout_height="@dimen/view_height"
				android:gravity="center"
				android:text="强筋骨、明纪律 铸造执纪铁军"
				android:textColor="@color/black_title"
				android:textSize="@dimen/t18" />
			
			<TextView
				android:id="@+id/tv_shcool_detail_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/x12"
				android:layout_marginLeft="@dimen/x12"
				android:layout_marginRight="@dimen/x12"
				android:text="2017-01-01    阅读量：1234"
				android:textColor="@color/black_hint"
				android:textSize="@dimen/t14" />
			
			<View style="@style/view_line" />
			
			<com.hbln.inspection.widget.x5.utils.BridgeWebView
				android:id="@+id/wv_school_detail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<com.hbln.lib_views.DrawableCenterTextView
					android:id="@+id/tv_school_detail_zan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawableTop="@drawable/icon_zan"
					android:gravity="center"
					android:text="当前数量：1234"
					android:textColor="@color/gray20"
					android:textSize="@dimen/t14" />
				
				<com.hbln.lib_views.DrawableCenterTextView
					android:id="@+id/tv_school_detail_cai"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawableTop="@drawable/icon_cai"
					android:gravity="center"
					android:text="当前数量：0"
					android:textColor="@color/gray20"
					android:textSize="@dimen/t14" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/layout_background_default"
				android:orientation="vertical"
				android:paddingBottom="@dimen/x20"
				android:paddingTop="@dimen/x10">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/shape_red_school"
					android:drawablePadding="@dimen/x5"
					android:text="交流讨论站"
					android:textColor="@color/black_title"
					android:textSize="@dimen/t18"
					android:textStyle="bold" />
				
				<EditText
					android:id="@+id/et_school_comment"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/x10"
					android:layout_marginRight="@dimen/x10"
					android:layout_marginTop="@dimen/x10"
					android:background="@drawable/shape_edittext"
					android:minHeight="@dimen/x80" />
				
				<Button
					android:id="@+id/btn_school_detail_submit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_marginRight="@dimen/x10"
					android:layout_marginTop="@dimen/x10"
					android:background="@drawable/shape_btn_normal_small"
					android:minHeight="0dp"
					android:minWidth="0dp"
					android:paddingBottom="@dimen/x5"
					android:paddingLeft="@dimen/x10"
					android:paddingRight="@dimen/x10"
					android:paddingTop="@dimen/x5"
					android:text="提交"
					android:textColor="@color/white"
					android:textSize="@dimen/t14" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	
	<View style="@style/view_line" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/view_height">
		
		<ImageButton
			android:id="@+id/ib_shaool_detail_font"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/white"
			android:src="@drawable/icon_font" />
		
		<ImageButton
			android:id="@+id/ib_shaool_detail_share"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/white"
			android:src="@drawable/icon_share" />
	</LinearLayout>
</LinearLayout>