<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x330"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/colorAccentRed"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:text="填写资料"
        android:textColor="@color/white"
        android:textSize="@dimen/t22"/>

    <View
        android:id="@+id/v_dialog_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/gray4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="姓名"
            android:textColor="@color/black_title"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_visit_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_small"
            android:background="@drawable/shape_edittext"
            android:editable="false"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/black_title"
            android:textColorHint="@color/black_hint"
            android:textSize="@dimen/t14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="亲属姓名"
            android:textColor="@color/black_title"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_visit_answer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_small"
            android:background="@drawable/shape_edittext"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/black_title"
            android:textColorHint="@color/black_hint"
            android:textSize="@dimen/t14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="亲属关系"
            android:textColor="@color/black_title"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_visit_answer_guanxi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_small"
            android:background="@drawable/shape_edittext"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/black_title"
            android:textColorHint="@color/black_hint"
            android:textSize="@dimen/t14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="亲属联系电话"
            android:textColor="@color/black_title"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_visit_answer_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_small"
            android:background="@drawable/shape_edittext"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/black_title"
            android:textColorHint="@color/black_hint"
            android:textSize="@dimen/t14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="注：请填写以上信息开始答题"
            android:textColor="@color/colorAccentRed"
            android:textSize="@dimen/t14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_visit_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_normal_small"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:text="开始"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>

        <Button
            android:id="@+id/btn_visit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/shape_btn_white_small"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>
    </LinearLayout>
</LinearLayout>