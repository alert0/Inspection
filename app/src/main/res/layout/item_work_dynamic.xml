<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">
	
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/x12"
		android:layout_marginLeft="@dimen/x12"
		android:layout_marginRight="@dimen/x12"
		app:cardElevation="@dimen/x5">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/tv_item_work_dynamic_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/x10"
				android:text="强化措施，奋力冲刺，确保圆满完成全年目标任务"
				android:textColor="@color/black_title"
				android:textSize="@dimen/t18" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/x10"
				android:layout_marginLeft="@dimen/x10"
				android:layout_marginRight="@dimen/x10"
				android:orientation="horizontal">
				
				<TextView
					android:id="@+id/tv_item_work_dynamic_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="第四纪检组"
					android:textColor="@color/black_hint"
					android:textSize="@dimen/t14" />
				
				<TextView
					android:id="@+id/tv_item_work_dynamic_org"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/x10"
					android:layout_weight="1"
					android:text="派驻纪检组"
					android:textColor="@color/black_hint"
					android:textSize="@dimen/t14" />
				
				<TextView
					android:id="@+id/tv_item_work_dynamic_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2017-01-01"
					android:textColor="@color/black_hint"
					android:textSize="@dimen/t14" />
			
			</LinearLayout>
		
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>