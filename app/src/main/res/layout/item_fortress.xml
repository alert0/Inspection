<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?selectableItemBackground"
	android:layout_marginBottom="@dimen/x5"
	android:layout_marginLeft="@dimen/x10"
	android:layout_marginRight="@dimen/x10"
	android:layout_marginTop="@dimen/x5"
	app:cardCornerRadius="@dimen/x5"
	app:cardElevation="@dimen/x5"
	>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/x12">
		
		<TextView
			android:id="@+id/tv_item_fortress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="2"
			android:text="关于在区纪委监察局机关党员中开展“学党章党规、学系列讲"
			android:textColor="@color/black_title"
			android:textSize="@dimen/t16" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/x20">
			
			<TextView
				android:id="@+id/tv_item_fortress_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/shape_edittext"
				android:paddingBottom="@dimen/x5"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:paddingTop="@dimen/x5"
				android:textColor="@color/gray20"
				android:textSize="@dimen/t14" />
			
			<Space
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
			
			<TextView
				android:id="@+id/tv_item_fortress_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="@dimen/x5"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:paddingTop="@dimen/x5"
				android:text="2017-01-01"
				android:textColor="@color/gray20"
				android:textSize="@dimen/t14" />
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>
